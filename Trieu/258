CREATE USER IF NOT EXISTS 'debezium'@'%' IDENTIFIED BY 'oracle_4U';
GRANT SELECT, RELOAD, SHOW DATABASES, REPLICATION SLAVE, REPLICATION CLIENT
ON *.* TO 'debezium'@'%';
FLUSH PRIVILEGES;

